{
  "name": "crypto-data-backend",
  "version": "1.0.0",
  "description": "Backend service for fetching and storing crypto funding rates",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:prepare": "tsx src/database/prepare-migrations.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:verify": "tsx src/database/verify-schema.ts",
    "db:fix-symbol": "tsx src/database/fix-symbol-length.ts",
    "db:seed": "tsx src/database/seed.ts",
    "verify:platforms": "tsx src/scripts/verify-platform-data.ts",
    "test": "jest --config ./jest.config.cjs",
    "test:watch": "jest --watch --config ./jest.config.cjs",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "crypto",
    "funding-rates",
    "hyperliquid",
    "perps"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/node-cron": "^3.0.11",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
