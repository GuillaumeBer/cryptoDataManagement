# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For Docker: use postgres:postgres@localhost:5432/crypto_data
# For local PostgreSQL: update with your credentials
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/crypto_data
DATABASE_POOL_SIZE=10

# Hyperliquid API
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
API_TIMEOUT=30000

# Scheduler Configuration
# Cron expression: every hour at minute 0
FETCH_INTERVAL_CRON=0 * * * *

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Platform API Keys
# Jupiter Perpetuals (via Dune Analytics)
# Get your API key from https://dune.com/settings/api
# Leave commented out if you don't need Jupiter data
# DUNE_API_KEY=your_dune_api_key_here
